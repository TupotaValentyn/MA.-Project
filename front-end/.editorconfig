# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,css,html,json}]
indent_size = 2
indent_style = space
max_line_length = 80

[*.go]
indent_size = 4
indent_style = tab

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
